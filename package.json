{
  "name": "@consalud/core",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "dist/assets"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest --watchAll",
    "start": "vite",
    "build:lib": "rollup -c rollup.config.js",
    "prepare": "npm run build:lib",
    "docker:dev": "docker-compose --profile development up --build",
    "docker:prod": "docker-compose --profile production up --build -d",
    "docker:test": "docker-compose --profile test up --build --abort-on-container-exit",
    "docker:clean": "docker-compose down --volumes --remove-orphans && docker system prune -f",
    "docker:logs:dev": "docker-compose --profile development logs -f",
    "docker:logs:prod": "docker-compose --profile production logs -f",
    "docker:logs:test": "docker-compose --profile test logs -f",
    "docker:build:prod": "docker build --target production -t consalud-core:prod .",
    "docker:build:dev": "docker build --target development -t consalud-core:dev .",
    "docker:build:test": "docker build --target test -t consalud-core:test .",
    "docker:size": "docker images consalud-core --format 'table {{.Repository}}:{{.Tag}}\\t{{.Size}}'"
  },
  "peerDependencies": {
    "@azure/msal-browser": "^4.11.0",
    "bulma": "^1.0.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "glob": "^11.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@azure/msal-browser": "^4.11.0",
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.27.1",
    "@eslint/js": "^9.21.0",
    "@rollup-extras/plugin-copy": "^1.11.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-url": "^8.0.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@types/react-router-dom": "^5.3.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^30.0.0",
    "bulma": "^1.0.3",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.2.0",
    "jest-environment-jsdom": "^30.0.0",
    "rollup": "^4.12.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.3.4"
  },
  "overrides": {
    "jsdom": "^24.0.0"
  }
}
